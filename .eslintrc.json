{
  "env": {
      "browser": true,
      "es2021": true
  },
  "extends": [
      "standard"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
  },
  "plugins": [
      "@typescript-eslint"
  ],
  "ignorePatterns": [
      "dist"
  ],
  "rules": {
      "no-undef": "off",
      "n/no-callback-literal": "off"
  }
}